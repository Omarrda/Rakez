{
  "manifest_version": 3,
  "name": "Rakez Focus Coach",
  "version": "1.1",
  "permissions": ["activeTab", "storage", "tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assistant.html", "rakezgreytransparentcropped.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/"
  ]
}